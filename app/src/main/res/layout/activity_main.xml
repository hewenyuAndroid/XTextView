<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.hwy.textview.XTextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EBEBEB"
        android:drawableLeft="@mipmap/icon_scan"
        android:drawablePadding="5dp"
        android:gravity="center_vertical|right"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="张三"
        android:textColor="#666666"
        android:textSize="14sp"
        app:tvBadgeLocal="drawable"
        app:tvBadgeRadius="3dp"
        app:tvBadgeStyle="dot"
        app:tvBadgeText="1"
        app:tvBadgeTextSize="10sp"
        app:tvBottomLineMarginLeft="20dp"
        app:tvBottomLineSize="1px"
        app:tvDrawableHeight="30dp"
        app:tvDrawableWidth="30dp"
        app:tvLineColor="#777777"
        app:tvTagGravity="leftTop"
        app:tvTagPadding="10dp"
        app:tvTagSeparator=":"
        app:tvTagText="姓名"
        app:tvTagTextColor="#666666"
        app:tvTagTextSize="14sp"
        app:tvUseTagSeparator="false" />

    <com.hwy.textview.XTextView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="#FF6600"
        android:drawableLeft="@mipmap/icon"
        android:drawablePadding="5dp"
        android:text="我"
        android:textColor="#333333"
        android:textSize="14sp"
        app:tvBadgeBgColor="#FFFFFF"
        app:tvBadgeLocal="drawable"
        app:tvBadgeRadius="6dp"
        app:tvBadgeText="2"
        app:tvBadgeTextColor="#777777"
        app:tvBadgeTextSize="10sp"
        app:tvDrawableCenter="true"
        app:tvDrawableHeight="20dp"
        app:tvDrawableWidth="20dp" />


</LinearLayout>