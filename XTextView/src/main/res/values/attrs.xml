<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 圆角 -->
    <attr name="tvCorner" format="dimension|reference" />
    <attr name="tvCornerLeftTop" format="dimension|reference" />
    <attr name="tvCornerRightTop" format="dimension|reference" />
    <attr name="tvCornerRightBottom" format="dimension|reference" />
    <attr name="tvCornerLeftBottom" format="dimension|reference" />
    <!-- 边框 -->
    <attr name="tvBorderSize" format="dimension|reference" />
    <attr name="tvBorderColor" format="color|reference" />
    <!-- 底部的分隔线 -->
    <attr name="tvLineColor" format="color|reference" />
    <attr name="tvBottomLineSize" format="dimension|reference" />
    <attr name="tvBottomLineMarginLeft" format="dimension|reference" />
    <attr name="tvBottomLineMarginRight" format="dimension|reference" />
    <!-- Tag -->
    <attr name="tvTagText" format="string|reference" />
    <attr name="tvTagTextColor" format="color|reference" />
    <attr name="tvTagTextSize" format="dimension|reference" />
    <attr name="tvTagPadding" format="dimension|reference" />
    <attr name="tvUseTagSeparator" format="boolean" />
    <attr name="tvTagSeparator" format="string|reference" />
    <!-- 指定 Drawable 的宽高-->
    <attr name="tvDrawableWidth" format="dimension|reference" />
    <attr name="tvDrawableHeight" format="dimension|reference" />
    <!-- 指定宽高作用的方向 -->
    <attr name="tvDrawableDirection" format="enum">
        <enum name="left" value="0" />
        <enum name="top" value="1" />
        <enum name="right" value="2" />
        <enum name="bottom" value="3" />
    </attr>
    <!-- 设置了 Drawable 后，显示的内容是否居中,left,top有效 -->
    <attr name="tvDrawableCenter" format="boolean" />


    <declare-styleable name="XEditText">
        <!-- 圆角 -->
        <attr name="tvCorner" />
        <attr name="tvCornerLeftTop" />
        <attr name="tvCornerRightTop" />
        <attr name="tvCornerRightBottom" />
        <attr name="tvCornerLeftBottom" />
        <!-- 边框 -->
        <attr name="tvBorderSize" />
        <attr name="tvBorderColor" />
        <!-- 底部的分隔线 -->
        <attr name="tvLineColor" />
        <attr name="tvBottomLineSize" />
        <attr name="tvBottomLineMarginLeft" />
        <attr name="tvBottomLineMarginRight" />
        <!-- TAG相关 -->
        <attr name="tvTagText" />
        <attr name="tvTagTextColor" />
        <attr name="tvTagTextSize" />
        <attr name="tvTagPadding" />
        <attr name="tvUseTagSeparator" />
        <attr name="tvTagSeparator" />
        <!-- 分隔线 -->
        <attr name="tvSeparatorWidth" format="dimension|reference" />
        <attr name="tvSeparatorHeight" format="dimension|reference" />
        <attr name="tvSeparatorColor" format="color|reference" />
        <attr name="tvSeparatorPadding" format="dimension|reference" />
        <!-- 清除按钮 -->
        <attr name="tvUseCross" format="boolean" />
        <attr name="tvCrossBgColor" format="color|reference" />
        <attr name="tvCrossRadius" format="dimension|reference" />
        <attr name="tvCrossColor" format="color|reference" />
        <attr name="tvCrossLength" format="dimension|reference" />
        <attr name="tvCrossSize" format="dimension|reference" />
        <attr name="tvCrossPadding" format="dimension|reference" />
        <!-- 指定 Drawable 的宽高-->
        <attr name="tvDrawableWidth" />
        <attr name="tvDrawableHeight" />
        <!-- 指定宽高作用的方向 -->
        <attr name="tvDrawableDirection" />
    </declare-styleable>

    <declare-styleable name="XTextView">
        <!-- 形状 -->
        <attr name="tvShape" format="enum">
            <enum name="square" value="0" />
            <enum name="circle" value="1" />
        </attr>
        <!-- 圆角 -->
        <attr name="tvCorner" />
        <attr name="tvCornerLeftTop" />
        <attr name="tvCornerRightTop" />
        <attr name="tvCornerRightBottom" />
        <attr name="tvCornerLeftBottom" />
        <!-- 边框 -->
        <attr name="tvBorderSize" />
        <attr name="tvBorderColor" />
        <!-- 边框，虚线时线段的长度 -->
        <attr name="tvBorderDashWidth" format="dimension|reference" />
        <!-- 边框，虚线时线段之间的距离 -->
        <attr name="tvBorderDashGap" format="dimension|reference" />

        <!-- 状态: press/enable -->
        <attr name="tvState" format="enum">
            <enum name="press" value="0" />
            <enum name="enable" value="1" />
        </attr>
        <!-- 是否使用状态 -->
        <attr name="tvUseState" format="boolean" />
        <!-- state无效时的文本颜色 -->
        <attr name="tvStateTextColorInvalid" format="color|reference" />
        <!-- state有效时的文本颜色 -->
        <attr name="tvStateTextColorValid" format="color|reference" />
        <!-- state 无效时的背景颜色 -->
        <attr name="tvStateBgColorInvalid" format="color|reference" />
        <!-- state 有效时的背景颜色 -->
        <attr name="tvStateBgColorValid" format="color|reference" />
        <!-- state 无效时的边框颜色 -->
        <attr name="tvStateBorderColorInvalid" format="color|reference" />
        <!-- state 有效时的边框颜色 -->
        <attr name="tvStateBorderColorValid" format="color|reference" />

        <!-- 底部的分隔线 -->
        <attr name="tvLineColor" />
        <attr name="tvBottomLineSize" />
        <attr name="tvBottomLineMarginLeft" />
        <attr name="tvBottomLineMarginRight" />
        <attr name="tvTopLineSize" format="dimension|reference" />
        <attr name="tvTopLineMarginLeft" format="dimension|reference" />
        <attr name="tvTopLineMarginRight" format="dimension|reference" />
        <attr name="tvLeftLineSize" format="dimension|reference" />
        <attr name="tvLeftLineMarginTop" format="dimension|reference" />
        <attr name="tvLeftLineMarginBottom" format="dimension|reference" />
        <attr name="tvRightLineSize" format="dimension|reference" />
        <attr name="tvRightLineMarginTop" format="dimension|reference" />
        <attr name="tvRightLineMarginBottom" format="dimension|reference" />

        <!-- TAG相关 -->
        <!-- tag的宽度固定 -->
        <attr name="tvTagWidth" format="string|reference" />
        <attr name="tvTagText" />
        <attr name="tvTagTextColor" />
        <attr name="tvTagTextSize" />
        <attr name="tvTagGravity" format="enum">
            <!-- 左上角 -->
            <enum name="leftTop" value="0" />
            <!-- 顶部居中 -->
            <enum name="topHorizontal" value="1" />
            <!-- 左侧垂直居中 -->
            <enum name="leftVertical" value="2" />
            <!-- 左下角 -->
            <enum name="leftBottom" value="3" />
        </attr>
        <attr name="tvTagPadding" />
        <attr name="tvUseTagSeparator" />
        <attr name="tvTagSeparator" />

        <!-- Badge相关 -->
        <attr name="tvBadgeText" format="integer" />
        <attr name="tvBadgeTextColor" format="color|reference" />
        <attr name="tvBadgeTextSize" format="dimension|reference" />
        <attr name="tvBadgeBgColor" format="color|reference" />
        <attr name="tvBadgeRadius" format="dimension|reference" />
        <!-- 显示红点还是带数字的徽章 -->
        <attr name="tvBadgeStyle" format="enum">
            <enum name="number" value="0" />
            <enum name="dot" value="1" />
        </attr>
        <!-- 设置徽章显示的位置 -->
        <attr name="tvBadgeLocal" format="enum">
            <enum name="text" value="0" />
            <enum name="tag" value="1" />
            <enum name="drawable" value="2" />
        </attr>
        <!-- badge在X位置上的偏移量 -->
        <attr name="tvBadgeOffsetX" format="dimension|reference" />
        <!-- badge在Y位置上的偏移量 -->
        <attr name="tvBadgeOffsetY" format="dimension|reference" />

        <!-- 指定 Drawable 的宽高-->
        <attr name="tvDrawableWidth" />
        <attr name="tvDrawableHeight" />
        <!-- 指定宽高作用的方向 -->
        <attr name="tvDrawableDirection" />
        <!-- 设置了 Drawable 后，显示的内容是否居中,left,top有效 -->
        <attr name="tvDrawableCenter" />

    </declare-styleable>

    <declare-styleable name="FoldTextView">
        <!-- 是否使用折叠功能 -->
        <attr name="useFold" format="boolean" />
        <!-- 折叠时最大的行数 -->
        <attr name="foldMaxLines" format="integer" />
        <!-- 折叠的文本 -->
        <attr name="foldText" format="string" />
        <!-- 打开的文本 -->
        <attr name="openText" format="string" />
        <attr name="foldTextSize" format="dimension|reference" />
        <attr name="foldTextColor" format="color" />
        <!-- 折叠文本显示的位置 -->
        <attr name="foldGravity" format="enum">
            <enum name="left" value="0" />
            <enum name="horizontal" value="1" />
            <enum name="right" value="2" />
        </attr>
        <!-- 折叠文本的上下左右间距，左间距只有left时有效，右间距只有right时有效 -->
        <attr name="foldMarginTop" format="dimension|reference" />
        <attr name="foldMarginLeft" format="dimension|reference" />
        <attr name="foldMarginRight" format="dimension|reference" />
        <attr name="foldMarginBottom" format="dimension|reference" />
        <!-- 折叠动画的延时 -->
        <attr name="foldDuration" format="integer" />
    </declare-styleable>

</resources>