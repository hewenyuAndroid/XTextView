<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="XTextView">
        <!-- 形状 -->
        <attr name="tvShape" format="enum">
            <enum name="square" value="0" />
            <enum name="circle" value="1" />
        </attr>
        <!-- 圆角 -->
        <attr name="tvCorner" format="dimension|reference" />
        <attr name="tvCornerLeftTop" format="dimension|reference" />
        <attr name="tvCornerRightTop" format="dimension|reference" />
        <attr name="tvCornerRightBottom" format="dimension|reference" />
        <attr name="tvCornerLeftBottom" format="dimension|reference" />
        <!-- 边框 -->
        <attr name="tvBorderSize" format="dimension|reference" />
        <attr name="tvBorderColor" format="color|reference" />
        <!-- 边框，虚线时线段的长度 -->
        <attr name="tvBorderDashWidth" format="dimension|reference" />
        <!-- 边框，虚线时线段之间的距离 -->
        <attr name="tvBorderDashGap" format="dimension|reference" />
        <!-- 状态: press/enable -->
        <attr name="tvState" format="enum">
            <enum name="press" value="0" />
            <enum name="enable" value="1" />
        </attr>
        <!-- 是否使用状态 -->
        <attr name="tvUseState" format="boolean" />
        <!-- state无效时的文本颜色 -->
        <attr name="tvStateTextColorInvalid" format="color|reference" />
        <!-- state有效时的文本颜色 -->
        <attr name="tvStateTextColorValid" format="color|reference" />
        <!-- state 无效时的背景颜色 -->
        <attr name="tvStateBgColorInvalid" format="color|reference" />
        <!-- state 有效时的背景颜色 -->
        <attr name="tvStateBgColorValid" format="color|reference" />
        <!-- state 无效时的边框颜色 -->
        <attr name="tvStateBorderColorInvalid" format="color|reference" />
        <!-- state 有效时的边框颜色 -->
        <attr name="tvStateBorderColorValid" format="color|reference" />
    </declare-styleable>

</resources>